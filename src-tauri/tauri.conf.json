{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "SummonGPT",
    "version": "1.0.0"
  },
  "tauri": {
    "systemTray": {
      "iconPath": "icons/icon.png"
    },
    "allowlist": {
      "globalShortcut": {
        "all": true
      },
      "dialog": {
        "save": true,
        "open": true
      },
      "fs": {
        "readDir": true,
        "readFile": true,
        "removeFile": true,
        "writeFile": true,
        "createDir": true,
        "copyFile": true,
        "scope": ["$APPDATA/history", "$APPDATA/history/*"]
      },
      "path": {
        "all": true
      },
      "clipboard": {
        "writeText": true
      },
      "window": {
        "center": true,
        "hide": true,
        "minimize": true,
        "setAlwaysOnTop": true,
        "setFocus": true,
        "show": true,
        "unminimize": true
      },
      "protocol": {
        "asset": true,
        "assetScope": ["$APPDATA/*"]
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "com.summongpt.app",
      "targets": "all"
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "title": "SummonGPT",
        "width": 600,
        "height": 560,
        "decorations": false,
        "alwaysOnTop": true,
        "transparent": true,
        "resizable": false,
        "center": true
      }
    ],
    "macOSPrivateApi": true
  }
}
